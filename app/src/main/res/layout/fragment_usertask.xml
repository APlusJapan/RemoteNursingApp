<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F9F6FB">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- 顶部积分区 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="22dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="10dp"
            android:background="#F6F7FB">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp">
                <!-- ...你积分区内容不变... -->
                <TextView
                    android:id="@+id/tv_point"
                    android:text="当前总积分：0"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#222"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_nick_name"
                    android:text="用户xxxx"
                    android:textSize="20sp"
                    android:textColor="#555"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_point"
                    android:layout_marginTop="24dp">
                    <TextView
                        android:id="@+id/tv_task_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今日任务数：--"
                        android:textSize="20sp"
                        android:layout_marginTop="2dp"
                        android:textColor="#444"/>
                    <TextView
                        android:id="@+id/tv_task_point_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今日可获得积分：--"
                        android:textSize="20sp"
                        android:layout_marginTop="2dp"
                        android:textColor="#444"/>
                    <TextView
                        android:id="@+id/tv_task_point_remain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今日已获得积分：--"
                        android:textSize="20sp"
                        android:layout_marginTop="2dp"
                        android:textColor="#444"/>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- 轮播区 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_banner"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            android:background="#F6F7FB">
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp_notice_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <!-- 康复视频库模块Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_learn_video"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#F6F7FB"
            android:visibility="gone">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">
                <TextView
                    android:id="@+id/tv_learn_video_title"
                    android:text="康复视频库"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#2A2A2A"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_video_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有新视频"
                    android:textSize="17sp"
                    android:textColor="#F6F7FB"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:background="@android:color/transparent"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- 任务区整体包裹 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#F6F7FB">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

            <TextView
                android:id="@+id/tv_task_area_title"
                android:text="任务区"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#444"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"/>
            <!-- 任务列表 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_tasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:padding="2dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:contentDescription="任务列表"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
